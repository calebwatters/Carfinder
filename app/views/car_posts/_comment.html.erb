<div class ="comment">

<div class="column">


<div class="column">
<h3>Reviews: </h3>
<table  style=" border: 1px solid;
  border-radius: 3px;" width="500">
<% @car_post.reviews.each do |comment| %>
    <thead>
        <th><%= comment.user.name %></th>
    </thead>
    <tbody>
        <td><%= comment.content %></td>
    </tbody>
<% end %>

</table>
<%= form_for @car_post.reviews.build do |f| %>
    <%= f.hidden_field :car_post_id %>
    <%= f.hidden_field :user_id%>
    <%= f.label :content, "Leave A Review:" %><br>
    <%= f.text_area :content%><br>
    <%= f.submit %>
<% end %>
</div>
</div>